<script>
    // --- IMPORTANT: REPLACE WITH ACTUAL GOOGLE REVIEW LINK ---
    const GOOGLE_REVIEW_LINK = "https://holidayuttarakhand.com/"; // Replace this with the G-Map Review URL
    
